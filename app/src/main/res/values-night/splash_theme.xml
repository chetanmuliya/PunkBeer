<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Splash Screen Theme. -->
        <style name="Theme.App.Starting" parent="Theme.SplashScreen">
            <item name="windowSplashScreenBackground">@color/yellow_lite</item>
            <item name="windowSplashScreenAnimatedIcon">@drawable/ic_beer_logo</item>
            <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@string/app_name</item>
            <item name="windowSplashScreenAnimationDuration">300</item>
            <item name="postSplashScreenTheme">@style/Theme.PunkBeer</item>

            <!-- Status bar and Nav bar configs -->
            <item name="android:statusBarColor" tools:targetApi="s">@color/yellow_lite</item>
        </style>
</resources>